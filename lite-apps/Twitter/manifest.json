{
  "manifest_version": 1,
  "lang": "en",
  "name": "Twitter",
  "start_url": "https://m.twitter.com",
  "manifest_url": "https://hermit.chimbori.com/library/lite-apps/Twitter.hermit",
  "theme_color": "#4798d8",
  "secondary_color": "#378ac8",
  "related_applications": [
      {
        "platform": "play",
        "url": "https://play.google.com/store/apps/details?id=",
        "id": ""
      }
  ],
  "icons": [
    {
      "src": "icon.png"
    }
  ],
  "hermit_settings": {
    "block_malware": true,
    "open_links": "in_app"
  },
  "hermit_bookmarks": [
    {
      "url": "https://twitter.com/i/moments",
      "name": "__MSG_moments__"
    },
    {
      "url": "https://twitter.com/i/notifications",
      "name": "__MSG_notifications__"
    }
  ],
  "hermit_search": [
    {
      "url": "https://twitter.com/search?q=%s",
      "name": "__MSG_search__"
    }
  ],
  "hermit_share": [
    {
      "url": "https://twitter.com/intent/tweet?text=%s",
      "name": "__MSG_tweet__"
    }
  ]
}
