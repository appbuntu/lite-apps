{
  "manifest_version": 1,
  "lang": "en",
  "name": "Google+",
  "start_url": "https://plus.google.com",
  "theme_color": "#dd4330",
  "secondary_color": "#e25f51",
  "icons": [
    {
      "src": "icon.png"
    }
  ],
  "hermit_settings": {
    "block_malware": true,
    "open_links": "in_app"
  },
  "hermit_bookmarks": [
    {
      "url": "https://plus.google.com/collections/featured",
      "name": "__MSG_collections__"
    },
    {
      "url": "https://plus.google.com/communities/member",
      "name": "__MSG_communities__"
    },
    {
      "url": "https://plus.google.com/people",
      "name": "__MSG_people__"
    }
  ],
  "hermit_search": [
    {
      "url": "https://plus.google.com/s/%s/top",
      "name": "__MSG_search__"
    }
  ],
  "hermit_share": [
    {
      "url": "https://plus.google.com/share?url=%u",
      "name": "Google+"
    }
  ]
}
